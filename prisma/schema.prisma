// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NOTE: The Zone enum has been removed.

model Warehouse {
  id                    String    @id
  warehouseOwnerType    String
  warehouseType         String
  address               String    @db.Text
  googleLocation        String?
  city                  String
  state                 String
  postalCode            String?
  zone                  String    // Changed from Zone enum to String
  contactPerson         String
  contactNumber         String
  totalSpaceSqft        String    // Changed from Float to String
  offeredSpaceSqft      String?   // Changed from Float? to String?
  numberOfDocks         String    // Changed from Int to String
  clearHeightFt         String?   // Changed from Float? to String?
  compliances           String    // Changed from String[] to String
  otherSpecifications   String?   @db.Text
  ratePerSqft           String    // Changed from Float to String
  availability          String?   // Changed from DateTime? to String?
  uploadedBy            String
  isBroker              String?   // Changed from Boolean? to String?
  photos                String?   // Changed from String[] to String

  // Timestamps are kept as DateTime for proper database-level tracking.
  createdAt             DateTime  @default(now())
  statusUpdatedAt       DateTime  @updatedAt @map("status_updated_at")
}